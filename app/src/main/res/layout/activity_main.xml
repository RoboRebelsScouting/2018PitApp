<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maxwell.pitapp2018.MainActivity">

    <EditText
        android:id="@+id/scoutName"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_column="1"
        android:layout_marginRight="16dp"
        android:layout_marginTop="100dp"
        android:layout_row="0"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="Name"
        android:inputType="textPersonName"
        android:maxLength="25"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColorHint="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="168dp"
        android:layout_row="0"
        android:text="Scout:"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:maxLength="15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="92dp"
        android:layout_row="1"
        android:text="Event:"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_column="2"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_row="0"
        android:text="Version 4.2.0"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="88dp"
        android:layout_row="2"
        android:text="Team:"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_column="1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="112dp"
        android:layout_row="3"
        android:onClick="nextButton"
        android:text="NEXT"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/teamNumber"
        android:layout_width="115dp"
        android:layout_height="60dp"
        android:layout_column="1"
        android:layout_marginRight="16dp"
        android:layout_marginTop="80dp"
        android:layout_row="2"
        android:hint="Number"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="30sp"
        android:textColorHint="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoutName" />

    <TextView
        android:id="@+id/eventName"
        android:layout_width="113dp"
        android:layout_height="40dp"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@+id/teamNumber" />


</android.support.constraint.ConstraintLayout>
